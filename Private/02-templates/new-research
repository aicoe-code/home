#!/bin/bash
# Quick wrapper to create new research files with proper naming

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Check if paper name is provided
if [ $# -eq 0 ]; then
    echo -e "${YELLOW}Research File Creator${NC}"
    echo "===================="
    echo ""
    echo "Usage: ./new-research \"Paper Title\" [date]"
    echo ""
    echo "Examples:"
    echo "  ./new-research \"INGRID robotic design\""
    echo "  ./new-research \"Transformer architecture survey\""
    echo "  ./new-research \"LLM evaluation metrics\" \"2025-01-10\""
    echo ""
    echo "The file will be created with proper date prefix (YYYY-MM-DD-name.md)"
    exit 1
fi

# Run the Python script with all arguments
python3 "$SCRIPT_DIR/create_research_file.py" "$@"

# Check if successful
if [ $? -eq 0 ]; then
    echo -e "\n${GREEN}âœ¨ Research file created successfully!${NC}"
    echo "Remember to:"
    echo "  1. Fill in the paper details"
    echo "  2. Complete all applicable sections"
    echo "  3. Run the HTML conversion when done"
fi